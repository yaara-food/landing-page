<style>
    .accessibility-bar {
        position: fixed;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        z-index: 1000;
    }

    .accessibility-button {
        background-color: #124cda;
        color: white;
        border: none;
        border-radius: 9999px;
        width: 48px;
        height: 48px;
        font-size: 1.25rem;
        cursor: pointer;
    }

    .accessibility-panel {
        margin-top: 0.5rem;
        width: 220px;
        background: white;
        border: 1px solid #ccc;
        border-radius: 0.5rem;
        box-shadow: 0 0 6px rgba(0, 0, 0, 0.1);
        padding: 1rem;
        font-size: 0.9rem;
    }

    .accessibility-panel button {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        padding: 0.4rem;
        margin-bottom: 0.4rem;
        border: none;
        border-radius: 0.25rem;
        background: #f0f0f0;
        cursor: pointer;
    }

    .accessibility-panel button.selected {
        background-color: #e0f7fa;
        font-weight: bold;
    }

    .hidden { display: none; }
</style>

